<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <tysheng.atlas.widget.MyPreferenceCategory android:title="基本设置">
        <Preference
            android:key="theme"
            android:summary="选择主题颜色"
            android:title="主题" />


    </tysheng.atlas.widget.MyPreferenceCategory>
    <tysheng.atlas.widget.MyPreferenceCategory android:title="账号设置">
        <Preference
            android:key="avatar"
            android:summary="修改头像"
            android:title="头像" />
        <Preference
            android:key="name"
            android:summary="修改姓名"
            android:title="姓名" />
        <Preference
            android:key="email"
            android:summary="修改邮箱"
            android:title="邮箱" />
    </tysheng.atlas.widget.MyPreferenceCategory>
    <tysheng.atlas.widget.MyPreferenceCategory android:title="系统设置">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="gank_tip"
            android:summary="是否开启Gank图片保存提示"
            android:title="Gank图片" />
        <Preference
            android:key="cache"
            android:summary="清除缓存"
            android:title="缓存" />

    </tysheng.atlas.widget.MyPreferenceCategory>
</PreferenceScreen>